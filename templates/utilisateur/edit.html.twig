{% extends 'basebackoffice.html.twig' %}

{% block title %}Ajouter Employé{% endblock %}

{% block body %}
<style>
  
    .form-container {
        background-color: #fff; 
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        padding: 20px; 
        margin: 50px auto 0; 
        max-width: 800px;
    }


    .btn-center {
        text-align: center; 
    }


    .form-label {
        font-size: 18px;
    }

    
    .form-title {
        font-size: 24px; 
        margin-bottom: 30px; 
        color: #333; 
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="form-container">
                <h1 class="text-center form-title">Mettre à jours employé</h1> 
                <form method="post">
                    {{ form_errors(form) }}
                    {{ form_start(form) }}
                    <div class="mb-4">
                        {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="mb-4">
                        {{ form_row(form.plainPassword, {'label': 'Mot de Passe', 'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary btn-center">Mettre à jours</button>
                    </div>
                    {{ form_end(form) }}
                </form>
            </div>
        </div>
    </div>
</div>

<div class="mt-5">
    {% include 'staticservicelist.html.twig' %}
</div>

{% endblock %}
