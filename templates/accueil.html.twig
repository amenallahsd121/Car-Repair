{% extends 'base.html.twig' %}


{% block title %}Accueil
{% endblock %}

{% block body %}


	<!-- Carousel Start -->
	<div class="container-fluid p-0 mb-5">
		<div id="header-carousel" class="carousel slide" data-bs-ride="carousel">
			<div class="carousel-inner">
				<div class="carousel-item active">
					<img class="w-100" src="assets/img/carousel-bg-1.jpg" alt="Image">
					<div class="carousel-caption d-flex align-items-center">
						<div class="container">
							<div class="row align-items-center justify-content-center justify-content-lg-start">
								<div class="col-10 col-lg-7 text-center text-lg-start">
									<h1 class="display-4 text-white mb-4 pb-3 animated slideInDown">Pour une voiture en pleine santé, optez pour notre service de vidange professionnelle !</h1>
									<a href="{{ path('app_service_index') }}" class="btn btn-primary py-3 px-5 animated slideInDown">Serivces proposés<i class="fa fa-arrow-right ms-3"></i>
									</a>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="carousel-item">
					<img class="w-100" src="assets/img/carousel-bg-2.jpg" alt="Image">
					<div class="carousel-caption d-flex align-items-center">
						<div class="container">
							<div class="row align-items-center justify-content-center justify-content-lg-start">
								<div class="col-10 col-lg-7 text-center text-lg-start">
									<h1 class="display-3 text-white mb-4 pb-3 animated slideInDown">Assurez la longévité de votre véhicule avec notre service de révision moteur expert !</h1>
									<a href="{{ path('horaires_ouverture') }}" class="btn btn-primary py-3 px-5 animated slideInDown">Horaires de travail<i class="fa fa-arrow-right ms-3"></i>
									</a>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
			<button class="carousel-control-prev" type="button" data-bs-target="#header-carousel" data-bs-slide="prev">
				<span class="carousel-control-prev-icon" aria-hidden="true"></span>
				<span class="visually-hidden">Précédent</span>
			</button>
			<button class="carousel-control-next" type="button" data-bs-target="#header-carousel" data-bs-slide="next">
				<span class="carousel-control-next-icon" aria-hidden="true"></span>
				<span class="visually-hidden">Suivant</span>
			</button>
		</div>
	</div>
	<!-- Carousel End -->


	<!-- Début des Témoignages -->
	<div class="container-xxl py-5">
		<div class="container">
			<h2 class="text-center mb-5">Les avis de nos clients</h2>
			<div class="row g-4">
				{% for temoignage in temoignages %}
					{% if temoignage.etat == 1 %}
						<div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="{{ loop.index * 0.2 }}s">
							<div class="d-flex py-5 px-4">
								<i class="fa fa-quote-left fa-3x text-primary flex-shrink-0"></i>
								<div class="ps-4">
									<h5 class="mb-3">{{ temoignage.Nom }}</h5>
									<p>{{ temoignage.Commentaire }}</p>
									<p>Note :
										{% for i in 1..5 %}
											{% if i <= temoignage.Note %}
												<i class="fa fa-star text-warning"></i>
											{% else %}
												<i class="fa fa-star text-secondary"></i>
											{% endif %}
										{% endfor %}
									</p>
								</div>
							</div>
						</div>
					{% endif %}
				{% endfor %}
			</div>
		</div>
	</div>
	<!-- Fin des Témoignages -->


{% endblock %}
